<div class="jumbotron">
  <%= form_for @conn, theme_path(@conn, :search), [as: :search, method: :get], fn f -> %>
    <div class="col-lg-6 offset-lg-3">
      <div class="form-group">
        <%= text_input f, :name, class: "form-control", placeholder: "Search", autofocus: true %>
      </div>
    </div>
    <div class="form-group">
      <%= submit raw("<i class='fa fa-search'></i>"), class: "btn btn-primary" %>
    </div>
  <% end %>
</div>
