<%= form_for @changeset, @action, [multipart: true], fn f -> %>
  <div class="form-group">
    <%= label f, :name %>
    <%= text_input f, :name, class: "form-control" %>
  </div>
  <div class="form-group">
    <div class="row">
      <div class="col-lg-7">
        <%= label f, :publisher %>
        <%= text_input f, :publisher, class: "form-control" %>
      </div>
      <div class="col-lg-7">
        <%= label f, :link %>
        <%= text_input f, :link, class: "form-control" %>
      </div>
      <div class="col-lg-6">
        <%= label f, :price %>
        <%= text_input f, :price, class: "form-control" %>
      </div>
    </div>
  </div>
  <div class="form-group">
    <%= label f, :description %>
    <%= textarea f, :description, class: "form-control", rows: "10" %>
  </div>
  <div class="form-group">
    <%= label f, :image %>
    <%= file_input f, :image, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= label f, :categories %>
    <%= inputs_for f, :categories, fn e -> %>
      <%= multiple_select(e, :categories, @categories, class: "form-control", size: "10") %>
    <% end %>
  </div>
  <%= submit "Create", class: "btn btn-primary" %>
<% end %>
